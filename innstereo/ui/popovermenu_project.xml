<interface>
  <object class="GtkPopoverMenu" id ="pom_project">
    <child>
      <object class="GtkBox">
        <property name="visible">True</property>
        <property name="margin">10</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkModelButton" id ="mb_new_project">
            <property name="visible">True</property>
            <property name="text" translatable="yes">New</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="margin-top">0</property>
            <property name="margin-bottom">0</property>
            <signal name="button-press-event" handler="on_toolbutton_new_project_clicked" swapped="no"/>
          </object>
        </child>
        <child>
          <object class="GtkModelButton" id ="mb_open_project">
            <property name="visible">True</property>
            <property name="text" translatable="yes">Open</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="margin-top">0</property>
            <property name="margin-bottom">3</property>
            <signal name="button-press-event" handler="on_toolbutton_open_clicked" swapped="no"/>
          </object>
        </child>
        <child>
          <object class="GtkModelButton" id ="mb_save_project">
            <property name="visible">True</property>
            <property name="text" translatable="yes">Save</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="margin-top">3</property>
            <property name="margin-bottom">0</property>
            <signal name="button-press-event" handler="on_toolbutton_save_clicked" swapped="no"/>
          </object>
        </child>
        <child>
          <object class="GtkModelButton" id ="mb_save_project_as">
            <property name="visible">True</property>
            <property name="text" translatable="yes">Save As</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="margin-top">0</property>
            <property name="margin-bottom">3</property>
            <signal name="button-press-event" handler="on_toolbutton_save_clicked" swapped="no"/>
          </object>
        </child>
        <child>
          <object class="GtkModelButton" id ="mb_quit">
            <property name="visible">True</property>
            <property name="text" translatable="yes">Quit</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
            <property name="margin-top">3</property>
            <property name="margin-bottom">0</property>
            <signal name="button-press-event" handler="on_menuitem_quit_activate" swapped="no"/>
          </object>
        </child>

      </object>
    </child>
  </object>
</interface>
